[colors]
background = #00fbf1c7
background-alt = #66bdae93
foreground = #3c3836
foreground-alt = #BB7c6f64
primary = #83a598
blue = #6683a598
background-blue = #6683a598
secondary = #8ec07c
aqua = #668ec07c
background-aqua = #668ec07c
alert = #fb4934
red = #66fb4934
background-red = #66fb4934
green = #66b8bb26
background-green = #66b8bb26
yellow = #66fabd2f
background-yellow = #66fabd2f
purple = #66d3869b
background-purple = #66d3869b
orange = #66fe8019
background-orange = #66fe8019
gray = #66928374
white = #FFFFFF

[bar/top]
width = 100%
height = 40
bottom = false
fixed-center = true
monitor = ${env:MONITOR}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

border-left-size = 0
border-right-size = 0
border-top-size = 0
border-bottom-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = "Font Awesome 5 Free:style=Regular:size=8;0"
font-1 = "Font Awesome 5 Free:style=Solid:size=8;0"
font-2 = "Font Awesome 5 Brands:size=8;0"
font-3 = "Droid Sans Mono:size=8;0"

modules-left = i3
modules-center =
modules-right = volume filesystem_root filesystem_shared xkeyboard vpncheck wlan eth battery temperature date time

wm-restack = i3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.blue}
label-focused-foreground = ${colors.white}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-underline = ${colors.gray}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.primary}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%!
label-urgent-background = ${colors.background-alt}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-volume-prefix = "  "
format-volume-suffix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-underline = ${colors.aqua}

label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

format-muted-prefix = "  "
format-muted-suffix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.alert}
label-muted = MUTE
label-muted-foreground = ${colors.foreground}

[module/filesystem_root]
type = internal/fs
interval = 5

mount-0 = /

format-mounted-prefix = "  SSD (/) "
format-mounted-suffix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.green}
label-mounted = %percentage_used%%

format-unmounted-prefix = "  "
format-unmounted-suffix = " "
format-unmounted-prefix-foreground = ${colors.foreground-alt}
format-unmounted-underline = ${colors.alert}
label-unmounted = not mounted
label-unmounted-foreground = ${colors.alert}

[module/filesystem_shared]
type = internal/fs
interval = 5

mount-0 = /home/jakobhans/shared

format-mounted-prefix = "  HD (~/shared) "
format-mounted-suffix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.green}
label-mounted = %percentage_used%%

format-unmounted-prefix = "  "
format-unmounted-suffix = " "
format-unmounted-prefix-foreground = ${colors.foreground-alt}
format-unmounted-underline = ${colors.alert}
label-unmounted = not mounted
label-unmounted-foreground = ${colors.alert}

[module/xkeyboard]
type = internal/xkeyboard

format-prefix = "  "
format-suffix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aqua}

label-layout = %layout%

label-indicator-padding = 0
label-indicator-margin = 0

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-underline = ${colors.green}
format-connected-prefix = "  "
format-connected-suffix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected = <label-connected>
label-connected = %signal%% - %essid%

format-disconnected = 

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp2s0f1
interval = 3.0

format-connected-underline = ${colors.green}
format-connected-prefix = "  "
format-connected-suffix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%, %downspeed%, %upspeed%

format-disconnected =

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.green}
format-charging-prefix = " "
format-charging-suffix = " "

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.orange}
format-discharging-prefix = " "
format-discharging-suffix = " "

format-full-prefix = "  "
format-full-suffix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.green}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 250

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 85

format = <ramp> <label>
format-underline = ${colors.green}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

format-prefix = " "
format-suffix = " "
[module/date]
type = internal/date
interval = 5

format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aqua}
date = %a %d %b,%Y

label = %date%

format-suffix = " "
[module/time]
type = internal/date
interval = 1

format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aqua}
time = %H:%M:%S

label = %time%

format-suffix = " "
[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label = VPN
format-underline = ${colors.primary}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

