[colors]
background = #00fbf1c7
background-alt = #66bdae93
foreground = #3c3836
foreground-alt = #7c6f64
primary = #458588
blue = #458588
secondary = #689d6a
aqua = #689d6a
alert = #cc241d
red = #cc241d
green = #98971a
yellow = #d79921
purple = #b16286
orange = #d65d0e
gray = #928374
;background = #00282828
;background-alt = #99665c54
;foreground = #ebdbb2
;foreground-alt = #a89984
;primary = #83a598
;blue = #83a598
;secondary = #8ec07c
;aqua = #8ec07c
;alert = #fb4934
;red = #fb4934
;green = #b8bb26
;yellow = #fabd2f
;purple = #d3869b
